font_family JetBrainsMono NF Bold
font_size 12.0
bold_font auto
italic_font auto
bold_italic_font auto
background_opacity 0.7
background_blur 20
transparent_background_colors white@0.5 

# Animated cursor
cursor_trail 4

enable_audio_bell no

map ctrl+shift+space keyboard_select


window_padding_width 4
include theme.conf

